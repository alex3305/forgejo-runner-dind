{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>renovate/renovate",
    "local>renovate/renovate:dockerfileAnnotations",
    "schedule:daily"
  ],
  "packageRules": [
    {
      "description": "Automerge majors",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true
    },
    {
      "description": "Workflows and Actions",
      "groupName": "workflows",
      "matchFileNames": [
        ".forgejo/**",
        ".gitea/**",
        ".github/**"
      ],
      "schedule": [
        "* * * * *"
      ],
      "addLabels": [
        "ci",
        "maintenance"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Match Renovate annotations in Docker Bake HCL files",
      "managerFilePatterns": [
        "/(^|/)(docker-bake\\.hcl)$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?(?: registryUrl=(?<registryUrl>.+?))?\\s.+?_VERSION.+?=.+?\"?(?<currentValue>.+?)\"?\\s"
      ]
    }
  ]
}
